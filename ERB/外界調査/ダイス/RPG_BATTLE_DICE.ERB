;-------------------------------------------------
;コモン다이스をランダムで抽選して返す関数
;LVにコモン다이스のレベルを受け取る
;-------------------------------------------------
@DICE_LOTTERY(LV = 1)
#DIM DSET , 100
#DIM CNT
#DIM DSETNUM
#DIM ISUNIQ
#DIM LV
VARSET DSET , -1
DSETNUM = 0

FOR CNT , 0 , VARSIZE("DSET")
	TRYCCALLFORM DICE_COMMON_{CNT}
		SIF RESULT == LV
			DSET:(DSETNUM++) = CNT
	CATCH
		CONTINUE
	ENDCATCH
NEXT

;DSETNUMが0ならコモン다이스が未定義なのでエラー
SIF DSETNUM == 0
	THROW コモン다이스が一つも定義されていません

RETURN DSET:(RAND:DSETNUM)

[SKIPSTART]
ELSEIF !RAND:
	RETURN 
[SKIPEND]


