@DUNGEON_4_ENEMY(RARE = -1)
#DIM RARE  ;レア敵フラグ。1ならレア敵が確実に出現する(レア敵が設定されているダンジョンのみ)
#DIM ENE
SIF RARE == -1
	RARE = POSSIB(3)

IF RARE == 1
	;レア敵
	SELECTCASE CHUSEN(33 , 33 , 33)
		CASE 0
			;ヴルトゥーム
			ENE = 13
		CASE 1
			;ロードビヤーキー
			ENE = 14
		CASEELSE
			;ニョグダ
			ENE = 15
	ENDSELECT
ELSE
	;通常敵
	IF FLAG:調査深度 > 100
		SELECTCASE CHUSEN(33 , 33 , 33)
			CASE 0
				;イタカァ
				ENE = 25
			CASE 1
				;イ＝ス
				ENE = 26
			CASEELSE
				;ショゴスロード
				ENE = 27
		ENDSELECT
	ELSE
		;ASのデフォルトでは100階以下は結構細かく設定されているが
		;統一しちゃう
		SELECTCASE CHUSEN(33 , 33 , 33)
			CASE 0
				;落とし子
				ENE = 28
			CASE 1
				;深きもの
				ENE = 29
			CASEELSE
				;ビヤーキー
				ENE = 30
		ENDSELECT
	ENDIF
ENDIF
RETURN ENE


