@DUNGEON_51_PERSON
#DIM PER
SELECTCASE CHUSEN(25 * (FLAG:調査深度 >= 30) , 25 * (FLAG:調査深度 >= 70) , 25 * (FLAG:調査深度 >= 50) , 25)
	CASE 0
		;傷ついた조인
		PER = 500
	CASE 1
		;冷凍カプセル
		PER = 400
	CASE 2
		;오니との出会い
		PER = 501
	CASEELSE
		;성노예救出
		PER = 401
ENDSELECT
RETURN PER


@DUNGEON_51_ENEMY(RARE = -1)
#DIM RARE  ;レア敵フラグ。1ならレア敵が確実に出現する(レア敵が設定されているダンジョンのみ)
#DIM ENE
SIF RARE == -1
	RARE = POSSIB(3)

IF RARE == 1
	;レア敵
	;ガベージコレクタ
	ENE = 18
ELSE
	;通常敵
	SELECTCASE CHUSEN(25 , 25 , 25 , 25)
		CASE 0
			;古き信心
			ENE = 19
		CASE 1
			;ヘ音記号状黒体
			ENE = 20
		CASE 2
			;神のつめあか
			ENE = 21
		CASEELSE
			;攻撃型論理妖精
			ENE = 22
	ENDSELECT
ENDIF
RETURN ENE


@DUNGEON_51_ITEM
#DIM IT
SELECTCASE CHUSEN(25 * (FLAG:調査深度 >= 50) , 25 , 25 , 25)
	CASE 0
		;ゲノム入手。調査深度50以降
		IT = 100
	CASE 1
		;書物閲覧
		IT = 101
	CASE 2
		;古代遺跡発見
		IT = 102
	CASEELSE
		;キャンプ跡地発見
		IT = 103
ENDSELECT
RETURN IT


