@DUNGEON_0_PERSON
#DIM PER
SELECTCASE CHUSEN(33 * (FLAG:調査深度 >= 30) , 33 , 33)
	CASE 0
		;성노예救出
		PER = 401
	CASE 1
		IF Flag:調査イベント発生中 == 0 && Flag:調査区域 == 0 && CFLAG:(FLAG:調査キャラ):犬_出産回数 <= 10
			;犬の花嫁
			PER = 802
		ELSEIF Flag:調査イベント発生中 == 0 && Flag:調査区域 == 0 && CFLAG:(FLAG:調査キャラ):犬_出産回数 >= 11
			;自らの業と向き合い、さらなる禁忌を
			PER = 804
		ENDIF
	CASEELSE
		;軟体動物の群れ
		PER = 803
ENDSELECT
RETURN PER


