@DUNGEON_1_FE(STEP)
#DIM STEP
#DIM EV
SELECTCASE CHUSEN(3 , 25 , 17 , 15 * (FLAG:調査深度 >= 20) , 40)
	CASE 0
		;レア敵。3%
		EV = 4
	CASE 1
		;通常敵。20%
		EV = 3
	CASE 2
		;人材絡み。15%
		EV = 1
	CASE 3
		;アイテム入手。調査深度20から。15%
		EV = 2
	CASE 4
		;その他。何も起きない
		EV = -1
	CASEELSE
		;予期しない数が返されても気づかない恐れがあるのでエラー落ち
		THROW 予期しない分岐
ENDSELECT
RETURN EV


