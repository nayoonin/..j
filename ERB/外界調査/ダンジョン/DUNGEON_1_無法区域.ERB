@DUNGEON_1_ENEMY(RARE = -1)
#DIM RARE  ;レア敵フラグ。1ならレア敵が確実に出現する(レア敵が設定されているダンジョンのみ)
#DIM ENE
SIF RARE == -1
	RARE = POSSIB(3)

IF RARE == 1
	;レア敵
	SELECTCASE CHUSEN(33 , 33 , 33)
		CASE 0
			;ヴルトゥーム
			ENE = 13
		CASE 1
			;ロードビヤーキー
			ENE = 14
		CASEELSE
			;ニョグダ
			ENE = 15
	ENDSELECT
ELSE
	;通常敵
	SELECTCASE CHUSEN(33 , 33 , 33)
		CASE 0
			;ショゴス
			ENE = 34
		CASE 1
			;ミ＝ゴ
			ENE = 35
		CASEELSE
			;インスマス
			ENE = 36
	ENDSELECT
ENDIF
RETURN ENE

