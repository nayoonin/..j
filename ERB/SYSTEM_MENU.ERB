;=================================================
;   sub SYSTEM_MENU
;=================================================
;   SYSTEM:MENU
;-------------------------------------------------
@SYSTEM_MENU(ARG:0)
#DIM L_INPUT
#DIM NOW_GROUP ;REF用
#DIM L_color
FLAG:継承종족 = 0
Flag:범용변수6 = 999
;- VAR:ターン終了処理
CALL VAR_TURNEND_MAIN

;キャラ数が一致しない場合、リストを再設定
IF GTR_CHARA_CNT != CHARANUM
	;- VAR:リスト更新
	CALL VAR_MAKE_LIST
ENDIF


;-------------------------------------------------

$MENU_TOP

;表示:ページヘッダ
CALL C_LINE

;-----------------------------
;-- データ部表示
;-----------------------------

;情報:日付
CALL INFO_DATE

;諸情報

;-----------------------------
;-- 区画表示
;-----------------------------
CALL CITY_MAP
;-----------------------------
;-- ターゲット部表示
;-----------------------------

;- 表示:ターゲット(主処理)
CALL INFO_TARGET_MAIN

;-----------------------------
;-- パートナー表示
;-----------------------------
SIF FLAG:調教対象人数
	CALL SYSTEM_PARTNER



;-----------------------------
;- メニューコマンド表示
;-----------------------------

DRAWLINE
L_color = GETCOLOR()

SIF !FLAG:調教対象人数
	SETCOLOR COLOR("伏字")
PRINTLC [100] - 밀회한다
SETCOLOR L_color


PRINTLC [101] - 카페
PRINTLC [102] - 시간진행
IF FLAG:도시_방위 != 0
	PRINTLC [300] - 방어전
ENDIF
SIF !FLAG:도시_현재BP && Flag:STATUS伏字モード
	SETCOLOR COLOR("伏字")
PRINTLC [50] - BP섭취(TP회복)
SETCOLOR L_color
PRINTL

PRINTLC [103] - 시설상세
PRINTLC [104] - 주민설정
PRINTLC [105] - 맨션관리
CALL CITY_STORY_NAME
PRINTL 



PRINTLC [106] - 외계조사
IF FLAG:도시_방위 != 0
	PRINTLC [   ] - 의뢰동결
ELSEIF Flag:依頼_スパイテロ駆除_Lv > 0 || Flag:依頼_이스からの駆除依頼_Lv > 0
	PRINTLC [107] - 의뢰-!-
ELSE
	SETCOLOR COLOR("伏字")
	PRINTLC [107] - 의뢰
	SETCOLOR L_color
ENDIF
PRINTLC [108] - 지원지시
PRINTLC [121] - 아카이브
PRINTL 
IF FLAG:도시_공적獲得機会 != 0
	SETCOLOR 50,250,250
	PRINTLC [109] - 주민업무-!-
	SETCOLOR L_color
ELSE
	PRINTLC [109] - 주민업무
ENDIF
PRINTLC [110] - 능력표시
PRINTLC [111] - 능력상승
IF Flag:EP他プレイヤー干渉 != 0
	SETCOLOR 250,50,50
	PRINTLC [112] - 【경고】
	SETCOLOR L_color
ENDIF
PRINTL 
PRINTLC [113] - 유물연구
PRINTLC [114] - 기업선동
PRINTLC [122] - 당신 전환
SIF FLAG:あなた_女フラグ == 1
	PRINTLC [133] - 밀회
PRINTL 

;PRINTLC [115] - 의상구입
PRINTL 
IF FLAG:유니크加入イベント発生 == 1
	PRINTLC [155] - 유니크가입
ELSE
	SETCOLOR COLOR("伏字")
	PRINTLC [   ] - 유니크가입
	SETCOLOR L_color
ENDIF
PRINTLC [150] - 어조수정(Ver4.4)
PRINTLC [151] - 이계접속
PRINTLC [153] ← [152] 파트너 변경 [154] →
PRINTL
PRINTLC [200] - 커맨드필터
PRINTLC [201] - 캐릭터정렬
PRINTLC [202] - 사전
PRINTL 

PRINTLC [800] - ＳＡＶＥ
PRINTLC [801] - ＬＯＡＤ
PRINTLC [802] - ＣＯＮＦＩＧ
SIF FLAG:２週目モード
	PRINTLC [803] - ２회차이행
PRINTL 
PRINTL 


;-----------------------------
;- コマンド受付
;-----------------------------
$INPUT_LOOP
INPUT
L_INPUT = RESULT
Flag:범용변수6 = 0
RESETBGCOLOR

;-------------------------------------------------

SELECTCASE L_INPUT
	;BP摂取
	CASE 50
		CALL SYSTEM_BP
	;行動を開始
	CASE 100
		FLAG:調教開始時の対象キャラ固定 = 1
		IF !FLAG:調教対象人数
			CALL C_INPUT_ERROR("조교대상이 존재하지 않으므로 실행할 수 없습니다. 조교대상을 선택해주세요.")
			GOTO INPUT_LOOP
		ENDIF
		CALL SYSTEM_TRAIN
		FLAG:ターン終了フラグ = 1

	;喫茶店
	CASE 101
		CALL CITY_CAFE
	;休憩
	CASE 102
		IF !FLAG:休憩確認機能
			FLAG:ターン終了フラグ = 1
			RESTART
		ELSE
			PRINTFORM 휴식하시겠습니까?
			PRINTL
			CALL INPUT_YN

			SELECTCASE RESULT
				;YES
				CASE 0
					FLAG:ターン終了フラグ = 1
					RESTART
				;NO
				CASE 1
					PRINTFORML 휴식을 취소하였습니다.
			ENDSELECT
		ENDIF
	;시설詳細
	CASE 103
		;表示:탐색
		CALL CITY_CENTER
	;주민設定
	CASE 104
		;表示:拠点へ
		CALL MANAGE_CHARA_SELECT("MNG_レギュラー指定")
		;CALL JN_CONFIG
	;マンション관리
	CASE 105
		;表示:マンション관리
		CALL C_M_MOVE
	;外界調査
	CASE 106
		;表示:外界調査
		CALL RPG_MAIN
	;依頼
	CASE 107
		;表示:依頼
		CALL MISSION_MAIN
	;支援指示
	CASE 108
		;表示:支援指示
		CALL Support_Order
	;주민業務
	CASE 109
		;表示:주민業務
		CALL WORK_MAIN
	;能力表示
	CASE 110
		NOW_GROUP = 1
		CALL LIST_CHARA_STATUS_MAIN(0, NOW_GROUP, "「情報表示」", "NOT_VOLUNTEER", "≪정보공개 신청을 수리했습니다. 대상자를 선택해주세요.≫")
	;能力上昇
	CASE 111
		;SYSTEM:ABLUP画面(LIST)
		CALL SYSTEM_ABLUP_LIST
	;警告
	CASE 112
		CALL EP_ACTION
	CASE 152
		CALL CHANGE_TARGET_MAIN2
	CASE 153
		CALL CHANGE_TARGET_PREV
	CASE 154
		CALL CHANGE_TARGET_NEXT
	;유니크加入
	CASE 155
		CALL Unique_Add
	;遺物研究
	CASE 113
		CALL AF_LABO
	;企業扇動
	CASE 114
		CALL CITY_KS
	;衣装購入
	CASE 115
		;衣装:主処理
		CALL COSTUME_MAIN
	;ストーリー
	CASE 120
		CLEARLINE LINECOUNT
		DRAWLINE
		TRYCALLFORM CITY_STORY_{FLAG:都市_ストーリー}
	;アーカイブ
	CASE 121
		CALL ARCHIVE_TOP
	;あなた入替
	CASE 122
		CALL MASTER_CHANGE
	;逢瀬
	CASE 133
		CALL OUS_MAINE
	;口調修正
	CASE 150
		;口調修正
		CALL CHARACTER_SCOUT_MIND_REPEAT0
	;異界接続
	CASE 151
		;異界接続
		CALL WORLD_CONNECT
	;コマンドフィルタ
	CASE 200
		;- コマンドフィルタ画面:主処理
		CALL COMMAND_FILTER_MAIN
	;キャラソート
	CASE 201
		;キャラソート画面(主処理)
		CALL CHARA_SORT_MAIN
	;調教典
	CASE 202
		;SYSTEM:ヘルプ
		CALL OPTION_ZITEN
	CASE 300
		;表示:防衛戦
		CALL CITY_RID_B
	;セーブ
	CASE 800
		;- SYSTEM:セーブ処理
		CALL TITLE_SAVEGAME
;		SAVEGAME
	;ロード
	CASE 801
		;- SYSTEM:ロード処理
		CALL TITLE_LOADGAME
;		LOADGAME
	;コンフィグ
	CASE 802
		;表示:コンフィグ(LIST)
		CALL CONFIG_LIST
	;２週目に移行
	CASE 803
		SIF !FLAG:２週目モード
			GOTO ERROR

		;表示:ページヘッダ
		CALL C_LINE

		PRINTFORML 일부 데이터를 이어받아 주차 플레이가 가능합니다.
		PRINTFORML ２회차로 이행하시겠습니까?
		PRINTL
		CALL INPUT_YN

		SELECTCASE RESULT
			;YES
			CASE 0
				PRINTFORMW 다음 주차로 이행합니다.
				PRINTL ………
				PRINTL ……
				PRINTW …
				;SYSTEM:二週目処理
				CALL SYSTEM_RESTART_MAIN
			;NO
			CASE 1
				PRINTFORMW 다음 주차 이행을 그만둡니다.
				PRINTL ………
				PRINTL ……
				PRINTW …
		ENDSELECT
	CASEELSE
		$ERROR
		CALL C_INPUT_ERROR
		GOTO INPUT_LOOP
ENDSELECT
RESTART
