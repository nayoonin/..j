;=================================================
;   sub CONFIG_LIST
;=================================================
;   コンフィグ(LIST)
;-------------------------------------------------
@CONFIG_LIST
#DIM L_I
#DIM L_CNT
#DIM L_INPUT
#DIM L_MAX
#DIM L_TMP
#DIM DYNAMIC L_HIT ,100
#DIM DYNAMIC L_SWITCH ,100
#DIMS L_STR

;--初期化
L_INPUT=0
L_MAX = 20

$PRINT_LIST

;表示:ページヘッダ
CALL C_LINE
PRINTFORML 설정하실 본체 기능 설정을 선택해주세요.
PRINTL

;- 初期化
VARSET L_HIT
VARSET L_SWITCH
L_CNT=0

FOR L_I, 0, L_MAX
	IF 1
		;- コンフィグNo.xx: xxxx (表題)
		TRYCCALLFORM CONFIG_DATA_{L_I}(L_I,"TITLE")

			L_STR = %RESULTS%

			;表示
			PRINTFORM [%TOSTR(L_I),3%] 상태:

			;- コンフィグ (PALAM)
			CALLFORM CONFIG_DATA_{L_I}(L_I,"PALAM")

			;- 表示:コンフィグ 主処理
			CALL CONFIG_PRINT_STATUS(RESULT)

			PRINTFORM | 
			PRINTFORM %L_STR, 40, LEFT% 

			;- コンフィグ (スイッチ)
			CALLFORM CONFIG_DATA_{L_I}(L_I,"SWITCH")
			IF RESULT
				PRINTFORM [%TOSTR(L_I + 100),3%] 【반전】 
				L_SWITCH:L_I = 1
			ENDIF

			L_HIT:L_I = 1
			PRINTL
			L_CNT ++
		CATCH
			;空行
			PRINTL
		ENDCATCH
	ENDIF
NEXT


PRINTL

PRINTLC  
PRINTLC [1000]돌아간다
PRINTLC  
PRINTL 
PRINTL 

$INPUT_LOOP_1
INPUT
L_INPUT = RESULT

SELECTCASE L_INPUT
	CASE 1000
		RETURN 0
	CASE 0 TO 99
		;- CHK:ヒット
		IF !L_HIT:(L_INPUT)
			GOTO ERROR
		ENDIF

		;表示:状態
		CALL CONFIG_MAIN(L_INPUT)
		GOTO PRINT_LIST

	CASE 100 TO 199
		L_TMP = L_INPUT - 100
		;- CHK:スイッチ
		IF !L_SWITCH:L_TMP
			GOTO ERROR
		ENDIF

		;- コンフィグNo.xx: xxxx (値)
		CALLFORM CONFIG_DATA_{L_TMP}(L_TMP,"SWITCH")

		;- コンフィグ変更(反転)
		FLAG:RESULTS = !FLAG:RESULTS
		GOTO PRINT_LIST

	CASEELSE
		$ERROR
		RESULT = L_INPUT
		;INPUTエラー対応
		CALL C_INPUT_ERROR
		GOTO INPUT_LOOP_1
ENDSELECT

RESTART

