;=================================================
;   sub INFO_TIME
;=================================================
;   情報:時間帯
;-------------------------------------------------
@INFO_TIME
#FUNCTIONS

SELECTCASE FLAG:時間帯
	CASE [[時間帯:夜]]
		RETURNF "밤"
	;- 0:昼
	CASEELSE
		RETURNF "낮"
ENDSELECT


;=================================================
