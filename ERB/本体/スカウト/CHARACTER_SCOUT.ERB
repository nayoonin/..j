	Talent:L_I:비처녀 = 1
	TCVAR:L_I:이력_EXP_처녀상실 = 1
	Talent:L_I:Ａ비처녀 = 1
	TCVAR:L_I:履歴_EXP_Ａ処女喪失 = 1
