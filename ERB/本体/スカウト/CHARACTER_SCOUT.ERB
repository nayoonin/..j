	ELSE
		CALL RANDOM_N_LADY1(ARG:0)
	ENDIF
ELSE
CALL RANDOM_N_MAN(ARG:0)
ENDIF


IF Flag:의뢰_의뢰개시 == 1
	S_RACE = RAND:((Flag:의뢰_의뢰Lv/5)+1)
