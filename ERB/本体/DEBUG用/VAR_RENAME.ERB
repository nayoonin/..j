;=================================================
;   sub VAR_MAKE_RENAME_UNIQUE_KEY
;=================================================
;   VAR:リネーム用유니크キー取得
;-------------------------------------------------
; Input:
;  ARG:0				対象キャラ
;  ARG:1				CSV優先フラグ(0:CSV 1:登録データ)
; Output:
;  RETURNF				유니크キー
;-------------------------------------------------
@VAR_MAKE_RENAME_UNIQUE_KEY(ARG, ARG:1=0)
#FUNCTIONS
#DIM L_I
#DIM L_TMP
#DIMS L_STR

L_I = ARG

IF !ARG:1
	SIF !EXISTCSV(L_I, 0)
		RETURNF

	L_TMP = GETNUM(CSTR,"CHARA_RENAME")
	L_STR = %CSVCSTR(L_I, L_TMP, 0)%
	SIF L_STR == ""
		L_STR = %CSVCALLNAME(L_I, 0)%
	SIF L_STR == ""
		L_STR = %CSVNAME(L_I, 0)%
ELSE
	L_STR = %CSTR:L_I:CHARA_RENAME%
	SIF L_STR == ""
		L_STR = %CALLNAME:L_I%
	SIF L_STR == ""
		L_STR = %NAME:L_I%
ENDIF

RETURNF L_STR



