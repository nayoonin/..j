@OUS_SUB_1(ARG)
#DIM L_INPUT
$INPUT_LOOP
CLEARLINE LINECOUNT
DRAWLINE
PRINTFORML 남성 주민 중 밀회 상대를 선택해주세요.
DRAWLINE
CALL MEMBER_LIST_D
PRINTFORML
PRINTFORML [999] - 돌아간다
INPUT
L_INPUT = RESULT
ARG = RESULT
SELECTCASE L_INPUT
CASE 999
	RETURN
CASEELSE
	SIF TALENT:L_INPUT:남성거주자 == 0
		GOTO INPUT_LOOP
	FLAG:あなた_元ターゲット = TARGET
	TFLAG:メインターゲット = L_INPUT
	GTR_PL:1 = L_INPUT
	TARGET = L_INPUT
	SIF FLAG:あなた_元ターゲット != -1
		CFLAG:(FLAG:あなた_元ターゲット):調教対象フラグ = 0
	CFLAG:(TARGET):調教対象フラグ = 1
	
	CALL SYSTEM_TRAIN
	
	SIF FLAG:あなた_元ターゲット != -1
		CFLAG:(FLAG:あなた_元ターゲット):調教対象フラグ = 1
	CFLAG:(TARGET):調教対象フラグ = 0
	TFLAG:メインターゲット = FLAG:あなた_元ターゲット
	TARGET = FLAG:あなた_元ターゲット
	GTR_PL:1 = FLAG:あなた_元ターゲット
	FLAG:ターン終了フラグ = 1
	FLAG:あなた_逢瀬中 = 0
	FLAG:調教開始フラグ = 0
	JUMP SYSTEM_MENU
ENDSELECT


